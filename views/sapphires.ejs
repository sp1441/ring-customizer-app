<% for (let i=0; i < sapphires.length; i++) { %>
  <% let sapphire=sapphires[i] %>
    <div>
      <h2>
        <%= sapphire.name %>
      </h2>
      <img src="<%= sapphire.image %>" alt="<%= sapphire.name %>">
      <% if (locals.errorMessage) { %>
        <div class="error-message">
          <%= locals.errorMessage %>
        </div>
        <% } %>
          <form action="/favorites" method="POST">
            <input type="hidden" name="gemId" value="<%= sapphire.id %>">
            <input type="hidden" name="gemType" value="sapphire">
            <button type="submit">Add to Favorites</button>
          </form>
    </div>
    <% } %>