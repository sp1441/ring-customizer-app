<% for (let i=0; i < emeralds.length; i++) { %>
  <% let emerald=emeralds[i] %>
    <div>
      <h2>
        <%= emerald.name %>
      </h2>
      <img src="<%= emerald.image %>" alt="<%= emerald.name %>">
      <% if (locals.errorMessage) { %>
        <div class="error-message">
          <%= locals.errorMessage %>
        </div>
        <% } %>
          <form action="/favorites" method="POST">
            <input type="hidden" name="gemId" value="<%= emerald.id %>">
            <input type="hidden" name="gemType" value="emerald">
            <button type="submit">Add to Favorites</button>
          </form>
    </div>
    <% } %>